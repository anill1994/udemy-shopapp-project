@model ProductDetailModel

<div class="row">
    <div class="col-md-3 mb-3">
        <img src="~/img/@Model.Product.ImageUrl" alt="" class="img-fluid">
    </div>
    <div class="col-md-9">
        <h5 class="mb-3">@Model.Product.Name</h5> <hr>
        @foreach (var item in Model.Categories)
        {
         <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
        }
        <h4 class="text-primary mb-3"><i class="fas fa-lira-sign">@Model.Product.Price</i></h4>
        <button class="btn btn-large btn-warning">AddToCart</button>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>@Model.Product.Description</p>  
        </div>
    </div>
</div>
