@model ProductViewModel


<a href="/admin/productcreate" class="btn btn-primary">Create Product</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 30px;">Id</th>
            <th style="width: 100px;">Image</th>
            <th>Name</th>
            <th style="width: 20px;">Price</th>
            <th style="width: 20px;">Anasayfa</th>
            <th style="width: 20px;">OnaylÄ±</th>
            <th style="width: 135px;"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Products.Count()>0){
            @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td><img src="~/img/@item.ImageUrl" width="80px" alt=""></td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>
                            @if(item.isHome){
                                <i class="fas fa-check-circle"></i>
                            }else{
                                <i class="fas fa-times-circle"></i>
                            }
                        </td>
                        <td>
                             @if(item.isApproved){
                                <i class="fas fa-check-circle"></i>
                            }else{
                                <i class="fas fa-times-circle"></i>
                            }
                        </td>
                        <td>
                            <a href="/admin/products/@item.ProductId" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/admin/deleteproduct" method="post" style="display: inline;">
                                <input type="hidden" value="@item.ProductId" name="productId">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
        }
        else{
            <div class="alert alert-warning">
                No Product
            </div>
        }
    </tbody>
</table>